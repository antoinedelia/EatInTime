                                               DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext}">
                                        </Button>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Nom_Plat}" FontSize="10"/>
                                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding String_Ingredients}" FontSize="10" />

                                        <TextBox Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Text="{Binding Prix_Plat, StringFormat=' {0} €'}" FontSize="10"/>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </TabItem>
